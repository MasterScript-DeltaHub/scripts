local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/jensonhirst/Orion/main/source"))()
local Player = game.Players.LocalPlayer

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡∏´‡∏•‡∏±‡∏Å
local Window = OrionLib:MakeWindow({
    Name = "Key System",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "KeySystem",
    IntroText = "Loading Script..."
})

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÇ‡∏´‡∏•‡∏î‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÉ‡∏™‡πà Key ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
function MakeScriptHub()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/MasterScript-DeltaHub/scripts/refs/heads/main/LoaderScripts"))()
end

-- ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
OrionLib:MakeNotification({
    Name = "Welcome!",
    Content = "Hello, "..Player.Name.."! Please enter the key.",
    Image = "rbxassetid://4483345998",
    Time = 5
})

-- ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Ñ‡πà‡∏≤ Key
getgenv().Key = "abc" -- Key ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
getgenv().KeyInput = "" -- ‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏à‡∏∞‡∏õ‡πâ‡∏≠‡∏ô

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏ó‡πá‡∏ö Key System
local KeyTab = Window:MakeTab({
    Name = "üîë Key System",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

KeyTab:AddTextbox({
    Name = "Enter Key Here",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        getgenv().KeyInput = Value
    end
})

KeyTab:AddButton({
    Name = "üîç Check Key",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Checking Key",
            Content = "Verifying the key you entered...",
            Image = "rbxassetid://4483345998",
            Time = 3
        })
        wait(2)

        if getgenv().KeyInput == getgenv().Key then
            OrionLib:MakeNotification({
                Name = "‚úÖ Success!",
                Content = "Key Verified! Access Granted.",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
            wait(1)
            OrionLib:Destroy()
            wait(0.5)
            MakeScriptHub()
        else
            OrionLib:MakeNotification({
                Name = "‚ùå Error",
                Content = "Invalid Key! Please try again.",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
        end
    end
})

KeyTab:AddButton({
    Name = "üìã Copy Key Link",
    Callback = function()
        setclipboard("https://discord.gg/Uzvz3buRY4")
        OrionLib:MakeNotification({
            Name = "Copied!",
            Content = "Key link copied to clipboard.",
            Image = "rbxassetid://4483345998",
            Time = 3
        })
    end
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏ó‡πá‡∏ö Settings
local SettingsTab = Window:MakeTab({
    Name = "‚öôÔ∏è Settings",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

SettingsTab:AddButton({
    Name = "üõë Close UI",
    Callback = function()
        OrionLib:Destroy()
    end
})

-- ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô UI
OrionLib:Init()
