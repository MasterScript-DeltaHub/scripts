local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
local Window = Library:NewWindow("Name")

local Tab = Window:NewSection("My Tab")

-- ดึงข้อมูลผู้เล่น
local player = game.Players.LocalPlayer
local wins = player:WaitForChild("leaderstats"):WaitForChild("Wins")

-- สร้าง TextBox และอัปเดตค่า Wins
local textBox = Tab:CreateTextbox("Wins: " .. tostring(wins.Value), function(text)
    print("User input:", text)
end)

-- อัปเดตค่าอัตโนมัติเมื่อ Wins เปลี่ยนแปลง
wins.Changed:Connect(function(newValue)
    textBox.Text = "Wins: " .. tostring(newValue)
end)
