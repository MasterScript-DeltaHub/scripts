local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
local Window = Library:NewWindow("KillerGUI")

local Tab = Window:NewSection("Main")

Tab:CreateToggle("Kill All NPC", function(value)
    print("Kill All NPC Toggle: " .. tostring(value))
    
    -- เมื่อ Toggle เปิด (value เป็น true)
    if value then
        -- ใช้การทำงานที่ปลอดภัยโดยการใช้ RunService เพื่อไม่ให้ลูปถูกหยุด
        local RunService = game:GetService("RunService")
        
        -- สร้างฟังก์ชั่นเพื่อฆ่า NPC
        local function killNPCs()
            for _, npc in pairs(workspace:GetChildren()) do
                if npc:IsA("Model") and npc:FindFirstChild("Humanoid") then
                    -- เช็คว่า NPC มี Humanoid (ทำให้สามารถฆ่าได้)
                    local humanoid = npc:FindFirstChild("Humanoid")
                    if humanoid then
                        humanoid.Health = 0  -- กำหนดให้ NPC ตาย
                    end
                end
            end
        end

        -- ใช้ Heartbeat เพื่อทำให้ฟังก์ชั่นทำงานอย่างต่อเนื่องในขณะที่ Toggle เปิด
        local connection
        connection = RunService.Heartbeat:Connect(function()
            killNPCs()  -- เรียกฟังก์ชั่นฆ่า NPC
        end)

        -- เก็บ connection เพื่อให้สามารถหยุดได้
        Tab:CreateToggle("Stop Kill All NPC", function(stop)
            if stop then
                connection:Disconnect()  -- หยุดการเชื่อมต่อเมื่อปิด Toggle
            end
        end)
    end
end)

local Tab2 = Window:NewSection("YT: DeltaXHUB")
