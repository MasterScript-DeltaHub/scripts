local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- üîπ ‡∏™‡∏£‡πâ‡∏≤‡∏á RemoteEvent ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
local remote = ReplicatedStorage:FindFirstChild("ChangeStats")
if not remote then
    remote = Instance.new("RemoteEvent", ReplicatedStorage)
    remote.Name = "ChangeStats"
end

-- üîπ ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Wins ‡πÅ‡∏•‡∏∞ Money
remote.OnServerEvent:Connect(function(player, stat, value)
    local leaderstats = player:FindFirstChild("leaderstats")
    if leaderstats and leaderstats:FindFirstChild(stat) then
        if typeof(value) == "number" then
            leaderstats[stat].Value = value
            print(player.Name .. " changed " .. stat .. " to " .. value)
        end
    end
end)

-- üîπ ‡πÇ‡∏´‡∏•‡∏î GUI ‡πÅ‡∏•‡∏∞ LocalScript ‡πÑ‡∏õ‡∏¢‡∏±‡∏á‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        -- ‡∏ñ‡πâ‡∏≤ GUI ‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß‡πÉ‡∏´‡πâ‡∏•‡∏ö‡∏ó‡∏¥‡πâ‡∏á‡∏Å‡πà‡∏≠‡∏ô
        local existingGui = player:FindFirstChild("DeadRailsGUI")
        if existingGui then existingGui:Destroy() end

        -- ‡∏™‡∏£‡πâ‡∏≤‡∏á GUI ‡πÉ‡∏´‡∏°‡πà
        local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
        local Window = Library:NewWindow("Dead Rails OP")
        local Tab = Window:NewSection("Main")

        -- ‡∏î‡∏∂‡∏á RemoteEvent
        local remoteEvent = ReplicatedStorage:WaitForChild("ChangeStats")

        -- üîπ ‡∏™‡∏£‡πâ‡∏≤‡∏á TextBox ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Wins
        Tab:CreateTextbox("Enter Wins", function(text)
            local newWins = tonumber(text)
            if newWins then
                remoteEvent:FireServer("Wins", newWins) -- ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÑ‡∏õ Server
                print("Request to set Wins:", newWins)
            else
                print("Invalid input! Please enter a number.")
            end
        end)

        -- üîπ ‡∏™‡∏£‡πâ‡∏≤‡∏á TextBox ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Money
        Tab:CreateTextbox("Enter Money", function(text)
            local newMoney = tonumber(text)
            if newMoney then
                remoteEvent:FireServer("Money", newMoney) -- ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÑ‡∏õ Server
                print("Request to set Money:", newMoney)
            else
                print("Invalid input! Please enter a number.")
            end
        end)
    end)
end)
