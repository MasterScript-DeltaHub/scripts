local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
local Window = Library:NewWindow("Dead Rails OP")

local Tab = Window:NewSection("Main")

-- ดึงข้อมูลผู้เล่น
local player = game.Players.LocalPlayer
local leaderstats = player:WaitForChild("leaderstats")
local wins = leaderstats:WaitForChild("Wins")
local money = leaderstats:WaitForChild("Money") -- เพิ่มตัวแปร Money

-- สร้าง TextBox เพื่อให้ผู้ใช้พิมพ์ค่า Wins ใหม่
Tab:CreateTextbox("Enter Wins", function(text)
    local newWins = tonumber(text) -- แปลงข้อความที่พิมพ์เป็นตัวเลข
    if newWins then
        wins.Value = newWins -- เปลี่ยนค่าชนะของผู้เล่น
        print("Wins set to:", newWins)
    else
        print("Invalid input! Please enter a number.")
    end
end)

-- สร้าง TextBox2 เพื่อให้ผู้ใช้พิมพ์ค่า Money ใหม่
Tab:CreateTextbox("Enter Money", function(text)
    local newMoney = tonumber(text) -- แปลงข้อความที่พิมพ์เป็นตัวเลข
    if newMoney then
        money.Value = newMoney -- เปลี่ยนค่าเงินของผู้เล่น
        print("Money set to:", newMoney)
    else
        print("Invalid input! Please enter a number.")
    end
end)
